@inherits StateComponent

<div class="card shadow m-2" style="max-width:300px">
    <div class="card-header">
        <h5>Order @Number.Item1 - @Number.Item2</h5>
    </div>
    <div class="card-body font-mono">
        <div class="list-group">
            @foreach (var l in Lines)
            {
                <button type="button" class="list-group-item list-group-item-action">
                    <div class="row">
                        <div class="col-8 small">
                            @l.z_DSC1_25
                        </div>
                        <div class="col-4 text-right pl-0">
                            @l.z_UOPN_16<span class="small">@l.z_UOM_87</span>
                        </div>
                    </div>
                </button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Tuple<int, string> Number { get; set; }

    IEnumerable<W4312F.Row> Lines => POState
        .OpenRequest
        .fs_P4312_W4312F
        .data
        .gridData
        .rowset
        .Where(r => r.z_DOCO_10 == Number.Item1 && r.z_DCTO_11.CompareTo(Number.Item2) == 0);
}
